# Supabase
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Football Data API (Provider actuel - saisons en cours)
FOOTBALL_DATA_API_KEY=your_football_data_api_key

# API-Football (Provider alternatif - prêt pour migration future)
# Note: Plan gratuit limité aux saisons 2021-2023
# Pour saisons actuelles: upgrade vers Plan Pro (19€/mois)
API_FOOTBALL_KEY=your_api_football_key
API_FOOTBALL_HOST=v3.football.api-sports.io

# Next Auth (si utilisé à la place de Supabase Auth)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret

# Application
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Resend (Email)
RESEND_API_KEY=your_resend_api_key

# Cron Jobs (pour les rappels automatiques)
CRON_SECRET=your_cron_secret
