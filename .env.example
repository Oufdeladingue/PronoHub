# Supabase
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Football Data API (Provider actuel - saisons en cours)
FOOTBALL_DATA_API_KEY=your_football_data_api_key

# Score Fallback: TheSportsDB (gratuit, aucune clé nécessaire)
# Utilisé automatiquement quand Football Data retourne des données stale
# Documentation: https://www.thesportsdb.com/free_sports_api

# Next Auth (si utilisé à la place de Supabase Auth)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret

# Application
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Google Sign-In (pour Android natif)
NEXT_PUBLIC_GOOGLE_WEB_CLIENT_ID=your_google_web_client_id.apps.googleusercontent.com

# Resend (Email)
RESEND_API_KEY=your_resend_api_key

# Cron Jobs (pour les rappels automatiques)
CRON_SECRET=your_cron_secret
CRON_ENABLED=false

# Stripe (Paiements)
STRIPE_SECRET_KEY=your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret
